.tile
    display block
    position absolute
    ._inner
        -webkit-transition opacity linear 0.1s
        transition opacity linear 0.1s
        border 1px solid black
        display block
        position relative
        height 100%
        width 100%
        text-align center
        ._value
            font-size 13px
            vertical-align middle
            display inline-block
            position absolute
            margin auto
            right 0
            left 0
            bottom 0
            top 0
            height 13px
        &.-reduced
            opacity 0