.wait
    width 100%
    padding 1em
    box-sizing border-box
    .ready, .status
        width 100px
    .name
        width 100px
    .columns
        margin 1em 0
        font-weight bold
        font-size 1.2em
        .ready, .name
            display inline-block
    .user
        .ready
            display inline-block
            vertical-align middle
            position relative
            .button
                width 30px
                height 30px
                cursor pointer
                -webkit-touch-callout none
                -webkit-user-select none
                -khtml-user-select none
                -moz-user-select none
                -ms-user-select none
                user-select none
                .-ready, .-not-ready
                    height 20px
                    width 20px
                    border-radius 1.5em
                    margin auto
                    top 0
                    bottom 0
                    left 0
                    right 0
                    position absolute
                .-ready
                    border 2px solid green
                    background-color green
                .-not-ready
                    border 2px solid red
        .name
            display inline-block

    .opponents
        .opponent-status
            width 100%
            height 3em
            box-sizing border-box
            margin 1em 0
            .name
                display inline-block
            .status
                display inline-block
                position relative
                vertical-align middle
                .-not-ready, .-ready
                    height 20px
                    width 20px
                    border-radius 1.5em
                .-not-ready
                    background-color red
                .-ready
                    background-color green