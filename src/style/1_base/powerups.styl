.stage
    .player
        .status
            .powerups
                .powerup-icon-wrap
                    height 3em
                    display inline-block
                    width 3em
                    position relative
                    .-powerup-icon
                        height 2.5em
                        width 2.5em
                        margin auto
                        position absolute
                        top 0
                        bottom 0
                        left 0
                        right 0
                        border-radius 0.6em
                        text-align center
                        .label
                            font-size 1.5em
                            line-height 1.5em
                            color white
                            font-weight bold
                    .-blocker
                        background-color red
                    .-remove-max
                        background-color blue

