            .score
                width 20%
                text-align center
                .text
                    font-size 1.6em
                    vertical-align center
                    margin-top 5px
                    .wrap
                        margin auto
            .rank
                width 20%
                text-align center
                .text
                    font-size 30px

        .board
            height 85%
        .identify
            height 5%
            .text
                padding 2%
                text-align center
